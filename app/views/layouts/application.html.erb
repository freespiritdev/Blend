<!DOCTYPE html>
<html>
  <head>
    <title>Blend</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="menu">
        <ul>
          <li><%= link_to "Home", '#' %></li>
          <li><%= link_to "About", '#' %></li>
          <li><%= link_to "Faqs", '#' %></li>
          <li><%= link_to "Contact", '#' %></li>
        </ul>
      </div>

    <%= yield %>

      <div class="footer">
        <ul class="footer-menu">
          <li><%= link_to "Home", '#' %></li>
          <li><%= link_to "About", '#' %></li>
          <li><%= link_to "Faqs", '#' %></li>
          <li><%= link_to "Contact", '#' %></li>
        </ul>
        <small><em>Copyright &copy; Blend, Inc</em></small>
      </div>
    </div>
  </body>
</html>
